{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

<main id="gh-main" class="post_index">
    {{#page}}
    <article class="gh-article {{page_class}}">
        {{> "components/post-header" titleFirst=true}}

        <div class="content">
            {{content}}
        </div>
    </article>
    {{/page}}

    {{> "components/post-list" feed="index" postFeedStyle=@custom.post_feed_style showTitle=true}}
</main>