{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

<main id="gh-main" class="post_index">
    {{#match pagination.page 1}}
    {{#page}}
    <article class="gh-article {{page_class}}">
        {{#match @page.show_title_and_feature_image}}
            {{> "components/post-header" titleFirst=true}}
        {{/match}}

        <div class="content">
            {{content}}
        </div>
    </article>
    {{/page}}
    {{/match}}

    {{> "components/post-list" feed="index" postFeedStyle=@custom.post_feed_style showTitle=true}}
</main>