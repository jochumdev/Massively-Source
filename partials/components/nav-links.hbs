{{#if @custom.i18n }}
    {{#foreach navigation}}
        <li class="nav-{{slug}} {{#if current}}active{{/if}}"><a href="/en{{url}}">{{label}}</a></li>
    {{/foreach}}
{{else}}
    {{#foreach navigation}}
        <li class="nav-{{slug}} {{#if current}}active{{/if}}"><a href="{{url absolute="true" }}">{{label}}</a></li>
    {{/foreach}}
{{/if}}
