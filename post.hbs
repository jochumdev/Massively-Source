{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}
{{!-- Everything inside the #post tags pulls data from the post --}}

<main id="gh-main">

    <section class="post">

        <header class="major">
            {{#if feature_image}}
            <figure class="image main">
                <img src="{{img_url feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
            {{/if}}
            {{#if @custom.show_publish_date}}
            <span class="date">{{date format="MMMM D, YYYY"}}</span>
            {{/if}}
            <h1>{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="content">{{custom_excerpt}}</p>
            {{/if}}
        </header>

        <div class="content">
            {{content}}
        </div>

        <footer class="post-footer">

            <div class="authors">
                {{#foreach authors}}
                <a class="author-box" href="{{url}}">
                    {{#if profile_image}}
                    <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
                    {{/if}}
                    <section class="author-box-content">
                        <div class="author-box-label i18n-translate" data-i18n="[html]theme:author">Author</div>
                        <h5 class="author-box-name">{{name}}</h5>
                        {{#if bio}}
                        <p>{{bio}}</p>
                        {{else}}
                        <p class="i18n-translate" data-i18n="[html]theme:more-from-this-author">More content from this author.</p>
                        {{/if}}
                    </section>
                </a>
                {{/foreach}}
            </div>

        </footer>

        {{!--
        <section class="post-full-comments">
            If you want to embed comments, this is a good place to do it!
        </section>
        --}}
    </section>

</main>

{{/post}}